@using (Html.BeginForm("PaymentHistory", "ClientView"))
{
    <div class="col-md-3">

        <select class="form-control" name="Year" id="PackageId">
            <option>Year</option>
            <option>2018</option>
            <option>2017</option>
            <option>2016</option>
            <option>2015</option>
            <option>2014</option>
        </select>

    </div>

    <div class="col-md-3">


        <select class="form-control" name="Month" id="PackageId">
            <option>Month</option>
            <option>January</option>
            <option>February</option>
            <option>March</option>
            <option>April</option>
            <option>May</option>
            <option>June</option>
            <option>July</option>
            <option>August</option>
            <option>September</option>
            <option>October</option>
            <option>November</option>
            <option>December</option>
        </select>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-info">Search</button>

    </div>
}
<div class="container">
    <br />
    <hr />
    <hr />
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>User Id</th>
                <th>User Name</th>
                <th>Amount</th>
                <th>Collection Date</th>
               


            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {

                <tr class="active">

                    <td>@p.UserId</td>

                    <td>@p.UserName</td>
                    <td>@p.Amount</td>
                    <td>@p.CollectionDate.ToString(string.Format("dd/MMM/yyyy"))</td>

                   

                </tr>

            }

        </tbody>
    </table>
</div>
