@model List<ONS.Core.Entities.Clients>
@{
    ViewBag.Title = "ClientShowAll";
    Layout = "~/Views/Shared/AfterLogin.cshtml";

}
<head runat="server">
    <title>
        ShowAll
    </title>
    @section scripts
    {
        <script src="~/Scripts/jquery-1.11.2.js"></script>
        @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
        <link href="~/Content/DataTable.css" rel="stylesheet" />
        <link href="~/Content/TableTool.css" rel="stylesheet" />
        @*<link href="~/Content/DataTable.Select.Min.css" rel="stylesheet" />*@

        <script src="~/Scripts/DataTable.js"></script>
        <script src="~/Scripts/TableTool.js"></script>
        @*<script src="~/Scripts/DataTable.SelectMin.js"></script>*@
        <script src="~/Scripts/TableToolMin.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {


                var table = $('#datatable').DataTable();


                var tableTools = new $.fn.dataTable.TableTools(table);
                $(tableTools.fnContainer()).insertBefore('#datatable_wrapper');
                $("#datatable_filter").hide();


                $('#checkboxall').click(function() {
                    if ($(this).is(":checked"))
                        $('.checkboxid').prop('checked', true);
                    else {
                        $('.checkboxid').prop('checked', false);
                    }


                });

            });



        </script>

    }
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="active navbar-brand" href="@Url.Action("ClientShowAll","ClientInfo")">Home</a><span class="sr-only">(current)</span>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">
                    <li class=""><a href="@Url.Action("CollectionLog","ClientInfo")">Collections </a></li>
                    <li>
                        <a href="#">
                            <span class="badge">Total Client : </span>
                            <span class="badge">@ViewBag.totalclient</span>
                        </a>
                    </li>

                </ul>
                <ul class="nav navbar-nav ">
                    <li>
                        <a class="btn  btn-success" data-toggle="modal" data-target=".bootstrapmodal">Total Balance</a>

                        <div class="modal fade bootstrapmodal">
                            <div class="modal-dialog">


                                <div class="modal-content">


                                    <div class="modal-header">
                                        <button data-dismiss="modal" class="close">
                                            <span>&times;</span>
                                        </button>


                                    </div>
                                    <div class="modal-title">

                                    </div>

                                    <div class="modal-body">

                                        <ul class="list-group">
                                            <li class="list-group-item">
                                                <span class="badge">@ViewBag.totalbalance</span>
                                                Balance Is :
                                            </li>
                                            <li class="list-group-item">
                                                <span class="badge">@ViewBag.totaldue</span>
                                                Due Is:
                                            </li>

                                        </ul>
                                    </div>
                                    <div class="modal-footer">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>

                <ul class="nav navbar-nav">
                    <li class=""><a href="@Url.Action("ClientForm","ClientInfo")">Add Client </a></li>

                </ul>





                <ul class="navbar-form navbar-left" role="search">

                    @using (Html.BeginForm("ClientShowAll", "ClientInfo"))
                    {
                        <div class="form-group">
                            <input type="text" name="Key" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-info">Search</button>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class=""><a href="@Url.Action("AdminProfile","ClientInfo")"><span class=" glyphicon glyphicon-user"></span> </a></li>

                    <li class=""><a href="@Url.Action("Index","Home")"><span class=" glyphicon glyphicon-log-out"></span> </a></li>
                </ul>




            </div>
        </div>
    </nav>
    
    @if (ViewBag.msg == 1)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Oh snap!</strong>  Select Some Row First.
        </div>
    }

    @using (Html.BeginForm("ClientShowAll", "ClientInfo"))
    {
        <div class="col-md-1">
            <h4> Search:</h4>
        </div>
        <div class="col-md-2">
            <select class="form-control" name="Address" id="AddressId">
                <option>Address</option>
                <option>Newtown 5 no</option>
                <option>Newtown 2 no</option>
                <option>Newtown 3 no</option>
                <option>Newtown 6 no</option>
                <option>Newtown 7 no</option>
                <option>Bahadur Bazar</option>
                <option>Nimtola</option>
                <option>Baluadanga</option>
                <option>Balubari</option>
                <option>Fokir Para</option>
                <option>Bus Stand</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-info">Search</button>
        </div>

    }




    @using (Html.BeginForm("ClientShowAll", "ClientInfo"))
    {
        <div class="col-md-2">
            <select class="form-control" name="Bandwidth" id="PackageId">
                <option> BandWidth</option>
                <option>1 Mbps</option>
                <option>2 Mbps</option>
                <option>3 Mbps</option>
                <option>4 Mbps</option>
                <option>5 Mbps</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-info">Search</button>
        </div>

    }


    @using (Html.BeginForm("ClientShowAll", "ClientInfo"))
    {
        <div class="col-md-2">

            <select class="form-control" name="Year" id="PackageId">
                <option> Year</option>
                <option>2018</option>
                <option>2017</option>
                <option>2016</option>
                <option>2015</option>
                <option>2014</option>
            </select>

        </div>

        <div class="col-md-2">


            <select class="form-control" name="Month" id="PackageId">
                <option> Month</option>
                <option>January</option>
                <option>February</option>
                <option>March</option>
                <option>April</option>
                <option>May</option>
                <option>June</option>
                <option>July</option>
                <option>August</option>
                <option>September</option>
                <option>October</option>
                <option>November</option>
                <option>December</option>
            </select>
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-info">Search</button>

        </div>
    }

    <br />

    <div class="container" style="margin:15px auto">
        @*<p><b>Select</b></p>
            <pre id="view-rows"></pre>
            <p><b>Pay All</b></p>
            <p><button class="btn btn-info"> Pay</button><br/></p>
            <br />*@
        <hr />
        <hr />
        @using (Html.BeginForm("PayAll", "ClientInfo"))
        {
            

            <input type="submit" class="btn btn-info" value="Pay All" onclick="return confirm('Are You Sure ??')" />
            <br />
            <br />
            <table class="table table-striped table-hover " id="datatable">

                <thead>
                    <tr>
                        <th><input type="checkbox" id="checkboxall"></th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Package</th>
                        <th>Monthly Bill</th>
                        <th>Pay</th>
                        <th>Due</th>
                        <th>Detail</th>
                        <th>Pay</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {

                        <tr class="success">
                            <td><input type="checkbox" class="checkboxid" name="ClientId" value=@p.ClientId></td>
                            <td>@p.ClientName</td>

                            <td>@p.PhoneNumber</td>
                            <td>@p.Address</td>
                            <td>@p.Package</td>
                            <td>@p.MonthlyBill</td>
                            <td>@p.Pay</td>
                            <td>@p.Due</td>
                            <td>
                                @Html.ActionLink("Details", "ClientDetail", new { Controller = "ClientInfo", id = p.ClientId })
                            </td>
                            <td>
                                @Html.ActionLink("Pay", "Pay", new { Controller = "ClientInfo", id = p.ClientId })
                            </td>

                        </tr>

                    }

                </tbody>
            </table>
        }
    </div>
</body>


